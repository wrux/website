---
import { Layout } from '~/layouts';
import Logo from '~/components/Logo.astro';
import SocialIcon from '~/components/SocialIcon.astro';

const socialLinks = [
  {
    name: 'github' as const,
    href: 'https://github.com/wrux',
    label: 'GitHub',
  },
  {
    name: 'linkedin' as const,
    href: 'https://www.linkedin.com/in/callum-bonnyman',
    label: 'LinkedIn',
  },
  {
    name: 'instagram' as const,
    href: 'https://www.instagram.com/etocallum/',
    label: 'Instagram',
  },
];
---

<Layout
  title="Software Engineer & Freelancer Building Digital Products | wrux.com"
  description="Software engineer and freelancer building digital products, including my own project Kacet. Focused on clean code, thoughtful design, and practical solutions."
>
  <div class="container">
    <header>
      <Logo class:list="text-3xl" />
    </header>

    <main>
      <h1
        class="text-4xl sm:text-5xl font-semibold tracking-tight text-neutral-900 dark:text-neutral-100 mb-6"
      >
        <span class="sr-only">Job title:</span>
        Software Engineer &mdash; Freelancer
      </h1>

      <p class="text-lg text-neutral-700 dark:text-neutral-300 mb-8 max-w-xl">
        <span class="sr-only">Summary:</span>
        I enjoy turning rough ideas into solid, usable products.
      </p>

      <p
        class="text-base leading-relaxed text-neutral-700 dark:text-neutral-300 mb-6 max-w-xl"
      >
        I’m a software engineer and product creator with a passion for simple,
        effective solutions. I focus on clean code, thoughtful design, and
        building tools that people enjoy using. I love turning complex problems
        into intuitive experiences.
      </p>

      <p
        class="text-base leading-relaxed text-neutral-700 dark:text-neutral-300 max-w-xl"
      >
        When I’m not coding, I enjoy exploring new tech and traveling the world
        while posting occasionally on
        <a
          href="https://callum.co.uk"
          class="underline underline-offset-4 decoration-neutral-400 hover:decoration-neutral-900 dark:hover:decoration-neutral-100 transition"
        >
          callum.co.uk
        </a>.
      </p>

      <ul class="flex gap-4 mt-8">
        {
          socialLinks.map((link) => (
            <li>
              <a
                href={link.href}
                target="_blank"
                rel="nofollow noreferrer"
                class="text-neutral-700 dark:text-neutral-300 hover:text-neutral-900 dark:hover:text-neutral-100 transition-colors"
                aria-label={link.label}
              >
                <SocialIcon name={link.name} size={28} />
              </a>
            </li>
          ))
        }
      </ul>
    </main>
  </div>
</Layout>
