---
import Layout from '~/layouts/Layout.astro';
import Logo from '~/components/Logo.astro';
import SocialIcon from '~/components/SocialIcon.astro';
import ProjectIcon from '~/components/ProjectIcon.astro';

const socialLinks = [
  {
    name: 'github' as const,
    href: 'https://github.com/wrux',
    label: 'GitHub',
  },
  {
    name: 'linkedin' as const,
    href: 'https://www.linkedin.com/in/wrux',
    label: 'LinkedIn',
  },
  {
    name: 'instagram' as const,
    href: 'https://www.instagram.com/etocallum/',
    label: 'Instagram',
  },
];

const projects = [
  {
    name: 'kacet' as const,
    href: 'https://kacet.com',
    label: 'kacet.com',
    color: '#0056f5',
  },
  {
    name: 'banburyshire' as const,
    href: 'https://banburyshire.com',
    label: 'banburyshire.com',
    color: '#152621',
  },
  {
    name: 'callum' as const,
    href: 'https://callum.co.uk',
    label: 'callum.co.uk',
    color: '#1f2937',
  },
  {
    name: 'pizza' as const,
    href: 'https://perpetual.pizza',
    label: 'perpetual.pizza',
    color: '#d10001',
  },
  {
    name: 'manhole' as const,
    href: 'https://manhole.gallery',
    label: 'manhole.gallery',
    color: '#f2a04f',
  },
  {
    name: 'butties' as const,
    href: 'https://butties.com',
    label: 'butties.com',
    color: '#003aad',
  },
];
---

<Layout
  title="Software Engineer & Freelancer Building Digital Products | wrux.com"
  description="Software engineer and freelancer building digital products, including my own project Kacet. Focused on clean code, thoughtful design, and practical solutions."
>
  <div class="container">
    <header class="my-16">
      <Logo class:list="text-3xl text-primary" />
    </header>

    <main class="my-16">
      <h1
        class="text-4xl sm:text-5xl font-semibold tracking-tight text-neutral-100 mb-6"
      >
        Callum Bonnyman, Software Engineer
      </h1>

      <p class="text-lg lg:text-2xl mb-8">
        <span class="sr-only">Summary:</span>
        I enjoy turning rough ideas into solid, usable products.
      </p>

      <p class="text-base leading-relaxed text-neutral-300 mb-6 max-w-xl">
        I’m a software engineer and product creator with a passion for simple,
        effective solutions. I focus on clean code, thoughtful design, and
        building tools that people enjoy using. I love turning complex problems
        into intuitive experiences.
      </p>

      <p class="text-base leading-relaxed text-neutral-300 max-w-xl">
        When I’m not coding, I enjoy exploring new tech and traveling the world
        while posting occasionally on
        <a href="https://callum.co.uk" class="link-underline">
          callum.co.uk
        </a>.
      </p>

      <ul class="flex gap-4 mt-8">
        {
          socialLinks.map((link) => (
            <li>
              <a
                href={link.href}
                target="_blank"
                rel="nofollow noreferrer"
                class="text-neutral-300 hover:text-neutral-100 transition-colors"
                aria-label={link.label}
              >
                <SocialIcon name={link.name} size={28} />
              </a>
            </li>
          ))
        }
      </ul>

      <section class="mt-16 max-w-4xl">
        <div class="mb-10 space-y-2">
          <h2 class="text-xl font-semibold">Projects</h2>
          <p class="text-base text-neutral-300">
            A selection of personal projects I've been working on.
          </p>
        </div>
        <ul class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-6 gap-8">
          {
            projects.map((project) => (
              <li class="group relative link-box flex flex-col gap-2">
                <div class="octagon relative aspect-square w-full rotate-[30deg] overflow-hidden group-hover:rotate-[10deg] transition-transform duration-300">
                  <div
                    class="relative aspect-square overflow-hidden h-full w-full flex items-center justify-center"
                    style={`background-color: ${project.color};`}
                  >
                    <ProjectIcon
                      name={project.name}
                      size={48}
                      class="-rotate-[30deg] group-hover:-rotate-[10deg] transition-transform duration-300"
                    />
                  </div>
                </div>
                <a
                  href={project.href}
                  target="_blank"
                  rel="nofollow noreferrer"
                  class="link-overlay link-hover text-neutral-300 hover:text-neutral-100 transition-colors text-center"
                  aria-label={project.label}
                >
                  <span class="text-sm">{project.label}</span>
                </a>
              </li>
            ))
          }
        </ul>
      </section>
    </main>
  </div>
</Layout>
