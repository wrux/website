---
export interface Props {
  className?: string;
  name: string;
}

const { className, name } = Astro.props;
---

<svg class:list={['icon', className]} focusable="false" aria-hidden>
  <use xlink:href={`#${name}`}></use>
</svg>

<style is:global>
  .icon {
    display: inline-block;
    flex-shrink: 0;
    height: 1em;
    width: 1em;
  }
</style>
