---
export interface Props {
  as?: string;
  className?: string;
  variant?: 'black' | 'dark' | 'primary' | 'secondary' | 'offwhite' | 'white';
}

const { as: As = 'section', className, variant = 'dark' } = Astro.props;
---

<As
  class:list={[
    'px-4 md:px-6 lg:px-8 -ppanel overflow-hidden',
    `panel--${variant}`,
    className,
  ]}
>
  <slot />
</As>

<style scoped>
  .panel {
    &--black {
      background-color: black;
      color: white;
    }

    &--dark {
      background-color: theme(colors.dark);
      color: white;
    }

    &--secondary {
      background-color: theme(colors.secondary);
      color: white;
    }

    &--offwhite {
      background-color: theme(colors.offwhite);
      color: theme(colors.dark);
    }

    &--white {
      background-color: white;
      color: theme(colors.dark);
    }
  }
</style>
