---
export interface Props {
  as?: string;
  className?: string;
  variant?: 'dark' | 'primary' | 'secondary' | 'offwhite';
}

const { as: As = 'section', className, variant = 'dark' } = Astro.props;
---

<As
  class:list={[
    'px-4 md:px-6 lg:px-8 panel overflow-hidden',
    `panel--${variant}`,
    className,
  ]}
>
  <slot />
</As>

<style scoped>
  .panel {
    padding-block: min(16rem, 10vw);

    &--dark {
      background-color: theme(colors.dark);
      color: white;
    }

    &--secondary {
      background-color: theme(colors.secondary);
      color: white;
    }

    &--offwhite {
      background-color: theme(colors.offwhite);
      color: theme(colors.dark);
    }
  }
</style>
