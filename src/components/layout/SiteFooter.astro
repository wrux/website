---
import Logo from "../Logo.astro";

export type Props = {
  navigation: Link[];
};

const { navigation } = Astro.props;
---

<footer class="m-spacing">
  <div
    class="container flex flex-col items-center justify-between gap-8 md:flex-row md:gap-12 lg:gap-16"
  >
    <Logo className="text-step-1" />
    <nav aria-label="Footer navigation">
      <ul
        class="type-p flex flex-col gap-8 text-center md:flex-row md:flex-wrap"
      >
        {
          navigation.map((link) => (
            <li>
              <a
                href={link.href}
                target="_blank"
                rel="nofollow noreferer"
                class="link"
              >
                {link.name}
                <span class="sr-only">(opens in new tab)</span>
              </a>
            </li>
          ))
        }
      </ul>
    </nav>
  </div>
</footer>
