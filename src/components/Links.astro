---
import ExternalLink from '../components/ExternalLink.astro';

export type Link = {
  description?: string;
  href: string;
  name: string;
  newTab?: boolean;
  text: string;
};

export interface Props {
  links: Array<Link>;
}

const { links } = Astro.props;
---

<nav slot="main" class="flex flex-col gap-16">
  <ul class="space-y-8 md:space-y-16">
    {
      links.map((link) => (
        <li class="space-y-2 md:space-y-4">
          <p class="c-p-lg">{link.name}</p>
          {link.description && (
            <div class="max-w-prose">
              <p class="c-p" set:html={link.description} />
            </div>
          )}
          <ExternalLink href={link.href} newTab={link.newTab}>
            {link.text}
          </ExternalLink>
        </li>
      ))
    }
  </ul>
</nav>
